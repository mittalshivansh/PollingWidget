<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".polling.ui.PollingWidgetActivity">


    <fragment
            android:id="@+id/text_poll_fragment"
            android:name="com.livelike.pollingwidget.polling.ui.TextPollWidgetFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent" android:layout_height="2dp"
            android:background="@color/colorAccent"/>


    <fragment
            android:id="@+id/image_poll_fragment"
            android:name="com.livelike.pollingwidget.polling.ui.ImagePollWidgetFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>